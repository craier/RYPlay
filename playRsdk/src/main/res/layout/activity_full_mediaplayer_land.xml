<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/video_layout"
        android:orientation="horizontal">

        <com.google.android.apps.muzei.render.GLTextureView
            android:id="@+id/gl_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/start_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_55dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/image_title_left"
                    android:layout_width="@dimen/margin_25dp"
                    android:layout_height="@dimen/margin_25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:scaleType="center"
                    android:src="@mipmap/btn_return" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/stretch_iv"
                        android:layout_width="@dimen/margin_30dp"
                        android:layout_height="@dimen/margin_30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/margin_15dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:scaleType="center"
                        android:src="@mipmap/streth_icon" />

                    <ImageView
                        android:id="@+id/cycle_iv"
                        android:layout_width="@dimen/margin_30dp"
                        android:layout_height="@dimen/margin_30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/margin_15dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:scaleType="center"
                        android:src="@mipmap/circle_icon"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/switch_iv"
                        android:layout_width="@dimen/margin_30dp"
                        android:layout_height="@dimen/margin_30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/margin_15dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:scaleType="center"
                        android:src="@mipmap/switch_icon" />

                    <ImageView
                        android:id="@+id/projection_iv"
                        android:layout_width="@dimen/margin_30dp"
                        android:layout_height="@dimen/margin_30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_15dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:scaleType="center"
                        android:src="@mipmap/projection_icon" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bottom_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_55dp"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/play_btn"
                    android:layout_width="@dimen/margin_25dp"
                    android:layout_height="@dimen/margin_25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:scaleType="center"
                    android:src="@mipmap/play_icon" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/glass_iv"
                        android:layout_width="@dimen/margin_25dp"
                        android:layout_height="@dimen/margin_25dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/margin_15dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:scaleType="center"
                        android:src="@mipmap/glass_icon" />

                    <ImageView
                        android:id="@+id/touch_iv"
                        android:layout_width="@dimen/margin_25dp"
                        android:layout_height="@dimen/margin_25dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/margin_15dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:scaleType="center"
                        android:src="@mipmap/touch_icon" />


                    <TextView
                        android:id="@+id/quick_play_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/margin_15dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:text="1X"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/res_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/margin_15dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:text="原画"
                        android:textColor="@color/white" />

                    <ImageView
                        android:id="@+id/full_screen_iv"
                        android:layout_width="@dimen/margin_25dp"
                        android:layout_height="@dimen/margin_25dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/margin_15dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:scaleType="center"
                        android:src="@mipmap/fill_screen_icon" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </FrameLayout>
    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

</RelativeLayout>
