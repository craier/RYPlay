<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_sumary">

    <RelativeLayout
        android:id="@+id/video_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <player.rongyun.com.playsdk.media.RYVideoView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black" />

        <RelativeLayout
            android:id="@+id/start_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_55dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/image_title_left"
                android:layout_width="@dimen/margin_25dp"
                android:layout_height="@dimen/margin_25dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:background="@null"
                android:contentDescription="@null"
                android:scaleType="center"
                android:src="@mipmap/btn_return" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/stretch_iv"
                    android:layout_width="@dimen/margin_30dp"
                    android:layout_height="@dimen/margin_30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/margin_15dp"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:scaleType="center"
                    android:src="@mipmap/streth_icon" />

                <ImageView
                    android:id="@+id/cycle_iv"
                    android:layout_width="@dimen/margin_30dp"
                    android:layout_height="@dimen/margin_30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/margin_15dp"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:scaleType="center"
                    android:src="@mipmap/circle_icon"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/switch_iv"
                    android:layout_width="@dimen/margin_30dp"
                    android:layout_height="@dimen/margin_30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/margin_15dp"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:scaleType="center"
                    android:src="@mipmap/switch_icon" />

                <ImageView
                    android:id="@+id/projection_iv"
                    android:layout_width="@dimen/margin_30dp"
                    android:layout_height="@dimen/margin_30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_15dp"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:scaleType="center"
                    android:src="@mipmap/projection_icon" />
            </LinearLayout>

        </RelativeLayout>
        <!--进度-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_play_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="00:00:00"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/text_play_max_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="4dp"
                    android:text="00:00:00"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <SeekBar
                    android:id="@+id/seek_bar_progress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/text_play_max_time"
                    android:layout_toRightOf="@id/text_play_time"
                    android:maxHeight="2.0dip"
                    android:minHeight="2.0dip"
                    android:progress="0"
                    android:thumb="@mipmap/thumb_progress"
                    android:progressDrawable="@drawable/seek_bar_progress_bg" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bottom_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_55dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/play_btn"
                    android:layout_width="@dimen/margin_25dp"
                    android:layout_height="@dimen/margin_25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:scaleType="center"
                    android:src="@mipmap/play_icon" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/quick_play_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/margin_15dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:text="1X"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/res_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/margin_15dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:text="原画"
                        android:textColor="@color/white" />

                    <ImageView
                        android:id="@+id/full_screen_iv"
                        android:layout_width="@dimen/margin_25dp"
                        android:layout_height="@dimen/margin_25dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/margin_15dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:scaleType="center"
                        android:src="@mipmap/fill_screen_icon" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layoutSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/mic_iv"
            android:layout_width="@dimen/margin_24dp"
            android:layout_height="@dimen/margin_24dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginLeft="@dimen/margin_12dp"
            android:src="@mipmap/mic_icon" />

        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="@dimen/margin_100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_6dp"
            android:layout_weight="1.98"
            android:indeterminate="false"
            android:max="9"
            android:maxHeight="2.0dip"
            android:minHeight="2.0dip"
            android:progress="0"
            android:progressDrawable="@drawable/seek_bar_progress_bg"
            android:thumb="@null"
            android:visibility="visible" />
    </LinearLayout>

    <me.kareluo.ui.PopLayout
        android:id="@+id/pl_pop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <me.kareluo.ui.OptionMenuView
            android:id="@+id/omv_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </me.kareluo.ui.PopLayout>
</FrameLayout>
